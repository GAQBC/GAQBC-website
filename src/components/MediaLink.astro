---
const { type = "email", value } = Astro.props

var href;
switch (type) {
    case "email":
        href = `mailto:${value}`
        break;

    case "discord":
        href = `` // TODO: add this
        break;
    
    case "gh":
        href = `https://github.com/${value}`
        break;

    default:
        href = value
        break;
}
---

<a class="media-link" href={href}><tt>{value}<tt/></a>

