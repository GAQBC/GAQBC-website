---
const { data } = Astro.props;
---

<div class="person">
    <img class="pfp" src={data.pfp}></img>
    <div class="personinfo">
        <h1 class="realname">{data.name}</h1>
        <div class="extrainfo">
            <p class="username">{data.discord}</p>
            <p class="position">{data.role}</p>
            <p class="school">{data.school}</p>
        </div>
    </div>
</div>

<style>
  .person {
  height: 160px;
  flex-basis: 200px;
  flex-grow: 1;
  vertical-align: top;
  padding: 10px;
  display: flex;
  align-items: center;
  border: solid #ddd;
  background-color: #f6f6f6;
  border-radius: 10px;
  margin: 5px;
  & > .pfp {
    display: inline-block;
    width: 75px;
    height: 75px;
    border-radius: 50%;
    margin-right: 20px;
  }
  & > .personinfo {
    display: inline-block;
    & > .realname {
      font-size: 25px;
      margin-top: 0px;
    }
    & > .extrainfo {
      & > p {
        margin-top: 8px;
        margin-bottom: 8px;
        &.username {
          font-family: monospace;
        }
        &.position {
          font-style: italic;
        }
      }
    }
  }
}
</style>