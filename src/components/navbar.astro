---
import NavDesktop from "@/components/islands/navDesktop.tsx";
import NavMobile from "@/components/islands/navMobile.tsx";
---

<NavDesktop client:media="(min-width: 769px)" />
<NavMobile client:media="(max-width: 768px)" />

<style is:global>
    @media (min-width: 769px) {
        nav[data-type="mobile"] {
            display: none !important;
        }
    }
    @media (max-width: 768px) {
        nav[data-type="desktop"] {
            display: none !important;
        }
    }

    #nav[data-type="desktop"] {
        transition: box-shadow 0.5s ease;
    }

    #nav[data-type="desktop"].scrolled {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<script>
    window.addEventListener("scroll", function () {
        const navbar = document.getElementById("nav");
        if (window.scrollY > 10) {
            navbar!.classList.add("scrolled");
        } else {
            navbar!.classList.remove("scrolled");
        }
    });
</script>
